<odoo>
    <record id="view_bulk_manager_groups_tree" model="ir.ui.view">
        <field name="name">bulk_manager.groups.tree</field>
        <field name="model">bulk_manager.bulk_manager_groups</field>
        <field name="arch" type="xml">
            <tree>
              <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_bulk_manager_groups_form" model="ir.ui.view">
        <field name="name">bulk_manager.groups.form</field>
        <field name="model">bulk_manager.bulk_manager_groups</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="product_ids">
                            <tree>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="price"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                      <field name="name"/>
                                      <field name="quantity"/>
                                      <field name="price"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bulk_manager_product_form" model="ir.ui.view">
        <field name="name">bulk_manager.product.form</field>
        <field name="model">bulk_manager.bulk_manager_product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quantity"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bulk_manager_groups" model="ir.actions.act_window">
        <field name="name">Bulk Manager Groups</field>
        <field name="res_model">bulk_manager.bulk_manager_groups</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bulk_manager_root" name="Bulk Manager"/>

    <menuitem id="menu_bulk_manager_groups" name="Groups"
              parent="menu_bulk_manager_root"
              action="action_bulk_manager_groups"/>
</odoo>
